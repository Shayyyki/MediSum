/* pages/inputNote/inputNote.wxss */
.container {
  display: flex;
  flex-direction: column;
  align-items: center;
  padding: 20px;
}

.section {
  width: 100%;
  margin-bottom: 20px;
}

.section__title {
  font-size: 16px;
  color: #333;
  margin-bottom: 10px;
}

.section__input, .section__textarea {
  width: 90%;
  height: 50px;
  padding: 20px;
  border: 2px solid #ccc;
  border-radius: 4px;
}

.section__textarea {
  height: 100px;
}

button {
  width: 100%;
  padding: 10px 0;
  color: #fff;
  background-color: #1aad19;
  border-radius: 4px;
}
